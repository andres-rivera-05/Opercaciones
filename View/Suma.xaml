<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Opercaciones.View.Suma"
             Title="Suma">
    <VerticalStackLayout>
        <Entry x:Name="imputUno" Placeholder="Ingrese un numero"
               Margin="30,0,30,20" FontSize="18" HeightRequest="60"/>
        <Entry x:Name="imputDos" Placeholder="Ingrese un numero"
               Margin="30,0,30,20" FontSize="18" HeightRequest="60"/>
        <Entry x:Name="imputTres" Placeholder="Ingrese un numero"
               Margin="30,0,30,20" FontSize="18" HeightRequest="60"/>
        <Button x:Name="ButtonSumar" Text="Sumar" Margin="30,0,30,0"
                CornerRadius="25" Background="#512BD4" TextColor="White"
                FontSize="18"/>
        <Button x:Name="ButtonLimpiar" Text="Limpiar" Margin="30,0,30,0"
        CornerRadius="25" Background="#512BD4" TextColor="White"
        FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>