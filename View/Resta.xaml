<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Opercaciones.View.Resta"
             Title="Resta"
             Background="#000">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">
        <Label Text="RESTA" HorizontalOptions="Center" FontSize="60" Margin="0,0,0,30" FontAttributes="Bold"/>
        <Entry x:Name="imputUno" Placeholder="Ingrese un numero"
           Margin="30,0,30,20" FontSize="18" HeightRequest="60" Keyboard="Numeric"/>
        <Entry x:Name="imputDos" Placeholder="Ingrese un numero"
           Margin="30,0,30,20" FontSize="18" HeightRequest="60" Keyboard="Numeric"/>

        <Button x:Name="ButtonRestar" Text="Restar" Margin="30,0,30,0"
            CornerRadius="25" Background="#0389ff" TextColor="White"
            FontSize="18" Clicked="ButtonRestar_Clicked"/>

        <Button x:Name="ButtonLimpiar" Text="Limpiar" Margin="30,20,30,0"
            CornerRadius="25" BackgroundColor="#0389ff" TextColor="White"
            FontSize="18" Clicked="ButtonLimpiar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>